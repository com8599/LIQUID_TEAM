<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp" app:srcCompat="@drawable/smartmetro" android:id="@+id/imageView3"
                android:layout_marginTop="20dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp" app:srcCompat="@drawable/mic" android:id="@+id/micButton"
                android:layout_marginTop="50dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_weight="1" android:orientation="vertical"
    >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">
            <TextView
                    android:text="Departure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/departText" android:layout_weight="1" android:hint="역 이름"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_search"
                        android:id="@+id/searchButton_start" android:layout_weight="0"
                        android:backgroundTint="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_weight="1"
                android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="5dp">
            <TextView
                    android:text="Arrival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/arriveText" android:layout_weight="1" android:hint="역 이름"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_search"
                        android:id="@+id/searchButton_depart" android:layout_weight="0"
                        android:backgroundTint="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

        <Button
                android:text="검색"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/searchButton" android:layout_marginTop="30dp"/>
</LinearLayout>