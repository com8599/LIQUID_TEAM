<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".RouteResultActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp" app:srcCompat="@drawable/route" android:id="@+id/imageView2"
                android:layout_marginTop="20dp"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="0">
                    <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp" app:srcCompat="@drawable/circle2" android:id="@+id/imageView"
                            android:layout_weight="0" android:layout_marginLeft="10dp"/>
                    <TextView
                            android:text="성수"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/textView5" android:layout_weight="1"
                            android:textSize="35sp" android:gravity="center_vertical" android:layout_marginLeft="10dp"
                            android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="0">
                    <ImageView
                            android:layout_width="60dp"
                            android:layout_height="120dp" app:srcCompat="@drawable/line2" android:id="@+id/imageView8"
                            android:layout_weight="0" android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="0">
                    <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp" app:srcCompat="@drawable/circle7" android:id="@+id/imageView9"
                            android:layout_weight="0" android:layout_marginLeft="10dp"/>
                    <TextView
                            android:text="강남구청"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/textView7" android:layout_weight="1"
                            android:textSize="35sp" android:gravity="center_vertical" android:layout_marginLeft="10dp"
                            android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="0">
                    <ImageView
                            android:layout_width="60dp"
                            android:layout_height="120dp" app:srcCompat="@drawable/line7" android:id="@+id/imageView3"
                            android:layout_weight="0" android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="0">
                    <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp" app:srcCompat="@drawable/circle7"
                            android:id="@+id/imageView6"
                            android:layout_weight="0" android:layout_marginLeft="10dp"/>
                    <TextView
                            android:text="건대입구"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/textView6" android:layout_weight="1"
                            android:textSize="35sp" android:gravity="center_vertical" android:layout_marginLeft="10dp"
                            android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!--<ImageView-->
        <!--android:id="@+id/map_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--/>-->

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/leftsearch"
                android:id="@+id/searchView_routeresult" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rightguide"
                android:id="@+id/guideView_routeresult" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>